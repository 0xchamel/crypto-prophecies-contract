  "bugs": {
    "url": "https://gitlab.com/crypto-prophecies/crypto-prophecies-contracts"
  },
  "homepage": "https://gitlab.com/crypto-prophecies/crypto-prophecies-contracts#readme",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.1",
    "@nomiclabs/hardhat-etherscan": "^2.1.0",
    "@nomiclabs/hardhat-truffle5": "^2.0.0",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/hardhat-upgrades": "^1.4.3",
    "@openzeppelin/test-helpers": "^0.5.10",
    "@typechain/truffle-v5": "^4.0.1",
    "@types/mocha": "^8.2.1",
