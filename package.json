{
  "name": "crypto-prophecies-contracts",
  "version": "1.0.0",
  "description": "Crypto prophecies contracts",
  "main": "index.js",
  "scripts": {
    "test": "hardhat test",
    "compile": "hardhat compile",
    "coverage": "npx hardhat coverage --solcoverjs ./.solcover.js --temp artifacts --testfiles \"./tests/**/*.ts\"",
    "deploy-dev": "truffle migrate --network development",
    "deploy-test": "truffle migrate --network rinkeby",
    "deploy-live": "truffle migrate --network live",
    "ganache": "yarn ganache-cli -e 1000000000000 -a 100 --networkId 999 -p 8545",
    "lint:sol": "solhint --config ./.solhint.json --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:ts": "eslint --config ./.eslintrc.yaml --ignore-path ./.eslintignore --ext .js,.ts .",
    "verify": "hardhat --network rinkeby etherscan-verify --license MIT"
  },
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/crypto-prophecies/crypto-prophecies-contracts.git"
  },
