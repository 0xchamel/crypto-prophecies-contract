    "@typescript-eslint/parser": "^3.10.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.12.0",
    "ethers": "^5.0.24",
    "hardhat": "^2.0.6",
    "solhint": "^3.2.1",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.16",
    "ts-generator": "^0.1.1",
    "typechain": "^4.0.1",
    "typescript": "^3.9.7"
  },
